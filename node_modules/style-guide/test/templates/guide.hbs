<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
</head>
<body>

  {{> nav}}
  
  <h1>{{title}}</h1>

  <section id="default-styles">
    <h2>Default Styles</h2>
    {{#each sections.[Default Styles]}}
    
      <h3>Name: {{name}}</h2>
      
      <h4>Description</h4>
      <p>{{description}}</p>
      
      <h4>Example</h4>
      <p>{{{example}}}</p>
      
      <h4>Code</h4>
      <p>
        <pre>
          <code>{{code}}</code>
        </pre>
      </p>
    
    {{/each}}
  </section>

  <section id="helper-classes">
    <h2>Helper Classes</h2>
    {{#each sections.[Helper Classes]}}
    
      <h3>Name: {{name}}</h2>
      
      <h4>Description</h4>
      <p>{{description}}</p>
      
      <h4>Example</h4>
      <p>{{{example}}}</p>
      
      <h4>Code</h4>
      <p>
        <pre>
          <code>{{code}}</code>
        </pre>
      </p>
    
    {{/each}}
  </section>

  {{> footer}}

</body>
</html>